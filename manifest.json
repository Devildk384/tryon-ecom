{
  "manifest_version": 3,
  "name": "Myntra Virtual Try-On",
  "version": "1.0.0",
  "description": "AI-powered virtual try-on for Myntra products",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*.myntra.com/*",
    "https://api.imgbb.com/*",
    "https://*.execute-api.eu-north-1.amazonaws.com/*",
    "https://static.getglam.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.myntra.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}